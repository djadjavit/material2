// TypeScript config file that extends the default tsconfig file for the library. This config is
// used to compile the tests for Karma. Since the code will run inside of the browser, the target
// needs to be ES5. The format needs to be CommonJS since Karma only supports that module format.
{
  "extends": "./tsconfig-build",
  "compilerOptions": {
    "importHelpers": false,
    "module": "commonjs",
    "target": "es5",
    "types": ["jasmine"],
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "paths": {
      "@angular/cdk/a11y": ["../../dist/packages/cdk/a11y"],
      "@angular/cdk/bidi": ["../../dist/packages/cdk/bidi"],
      "@angular/cdk/coercion": ["../../dist/packages/cdk/coercion"],
      "@angular/cdk/platform": ["../../dist/packages/cdk/platform"],
      "@angular/cdk/portal": ["../../dist/packages/cdk/portal"],
      "@angular/cdk/keyboard": ["../../dist/packages/cdk/keyboard"],
      "@angular/cdk/rxjs": ["../../dist/packages/cdk/rxjs"],
      "@angular/cdk/table": ["../../dist/packages/cdk/table"],
      "@angular/cdk/observe-content": ["../../dist/packages/cdk/observe-content"],
      "@angular/cdk/testing": ["../../dist/packages/cdk/testing"]
    }
  },
  "include": [
    "**/*.spec.ts",
    "index.ts"
  ]
}
